+	target->sin6_port = 0;
+	target->sin6_flowinfo = 0;
+	memcpy(target->sin6_addr.s6_addr, address.s6_addr, sizeof(in6_addr));
+	target->sin6_scope_id = 0;
+	return (sockaddr*)target;
